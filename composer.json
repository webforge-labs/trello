{
  "name":"webforge\/trello",
  "description":"Access the trello.com API",
  "license":"MIT",
  "authors":[
    {
      "name":"Philipp Scheit",
      "email":"p.scheit@ps-webforge.com"
    }
  ],
  "minimum-stability":"dev",
  "require":{
    "webforge/project-stack": "1.2.*",
    "guzzlehttp/guzzle": "4.2.*",
    "guzzlehttp/log-subscriber": "~1.0"
  },
  "require-dev": {
    "webforge/testplate": "1.*",
    "doctrine/data-fixtures": "1.0.*@dev"
  },
  "autoload":{
    "psr-0":{
      "Webforge\\Trello":[
        "src\/php\/",
        "tests\/php\/"
      ]
    }
  },
  "extra":{
    "directory-locations": {
      "doctrine-entities": "src/php/Webforge/Trello/Entities",
      "lib": "src/php/",
      "tests": "tests/php/",
      "test-files": "tests/files/",
      "tpl": "Resources/tpl/",
      "tpl-cache": "files/cache/tpl/",
      "resources": "Resources/",
      "alice-fixtures": "tests/files/fixtures/"
    },

    "branch-alias":{
      "dev-master":"1.0.x-dev"
    }
  }
}
